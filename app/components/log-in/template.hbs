<div class="container login-container row">
  <form class="form-horizontal clearfix" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      <label for="identification" class="col-md-3 control-label">Email</label>
      <div class="col-md-8">
        {{input id='identification' placeholder='Enter Login' class="form-control" value=identification}}
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-md-3 control-label">Password</label>
      <div class="col-md-8">
        {{input id='password' placeholder='Enter Password' type='password' class="form-control" value=password}}
      </div>
    </div>
    <div class="error-message">{{errorMessage}} &nbsp;</div>
    <br><br>
    <div class="form-group">
      <center>
        <div class="col-md-12">
          <button class="fading-button btn btn-lg btn-success cstm-btn" type="submit">Login</button><br>
          {{#link-to 'register'}}Not a member? Register{{/link-to}}
        </div>
      </center>
    </div>
  </form>
  {{!-- TODO: Add password recover --}}
</div>
